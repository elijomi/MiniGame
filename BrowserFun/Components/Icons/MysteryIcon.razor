@* Bowl of fruits icon; emphasize fruits with a shallow bowl, flat friendly style *@
<svg @attributes="AdditionalAttributes" viewBox="0 0 24 24" aria-hidden="true" focusable="false">
    <!-- Fruits cluster -->
    <circle cx="8.6" cy="10.8" r="1.9" fill="#ef4444" /> <!-- apple -->
    <circle cx="11.5" cy="10.6" r="1.7" fill="#f59e0b" /> <!-- orange -->
    <circle cx="14.2" cy="11.1" r="1.5" fill="#9333ea" /> <!-- grape -->
    <circle cx="12.9" cy="12.2" r="1.1" fill="#22c55e" /> <!-- lime -->
    <ellipse cx="9.8" cy="12.3" rx="2.4" ry="1.0" fill="#facc15" /> <!-- banana arc -->
    <!-- small grape cluster dots -->
    <circle cx="15.3" cy="12.2" r=".7" fill="#7e22ce" />
    <circle cx="14.7" cy="12.9" r=".6" fill="#6d28d9" />
    <!-- Leaves -->
    <path d="M7.8 9.5c.9-.3 1.6 0 2 .7" fill="none" stroke="#16a34a" stroke-width="1" stroke-linecap="round" />
    <path d="M13.2 9.4c.7-.4 1.4-.3 2 .2" fill="none" stroke="#16a34a" stroke-width="1" stroke-linecap="round" />

    <!-- Shallow bowl base -->
    <path d="M5.2 13.6c2.1 1.6 5 2.4 6.8 2.4s4.7-.8 6.8-2.4" fill="none" stroke="#7b5b49" stroke-width="2" stroke-linecap="round" />
    <!-- subtle inner rim -->
    <path d="M6.2 14.4c1.8.9 4 .9 5.8.9s4-.1 5.8-.9" fill="none" stroke="#6b4a3b" stroke-width="1" opacity=".6" />

    <!-- Highlights -->
    <circle cx="8" cy="10.4" r=".25" fill="#fff" opacity=".7" />
    <circle cx="11" cy="10.1" r=".25" fill="#fff" opacity=".7" />
    <circle cx="14.9" cy="10.7" r=".22" fill="#fff" opacity=".7" />
</svg>

@code {
    [Parameter(CaptureUnmatchedValues = true)] public IDictionary<string, object>? AdditionalAttributes { get; set; }
}
